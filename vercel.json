{
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxDuration": 30,
        "memory": 512,
        "includeFiles": ["models/heart_model.pkl"],
        "excludeFiles": "{dashboards/**,.next/**,node_modules/**,scripts/**,.venv/**}"
      }
    },
    {
      "src": "dashboards/nextjs-dashboard/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [{ "src": "/predict", "dest": "api/main.py" }]
}
